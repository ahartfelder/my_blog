<%= form_with model: [@article, @article.comments.build] do |f| %>
    <div class="input-group my-3">
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.text_field :body, class:"form-control rounded", placeholder:"Enter you comment here" %>
      <%= f.submit 'Post Comment', class:"btn btn-success" %>
    </div>
<% end %>
