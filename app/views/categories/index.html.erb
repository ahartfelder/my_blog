<h1>Categories</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<% @categories.each do |category| %>
  
  <div class="card text-center my-4 shadow rounded">
    <div class="card-body">
      <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
      <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
    </div>
    <div class="card-footer text-muted">
      <small>Created <%= time_ago_in_words(category.created_at) %> ago,
      Updated <%= time_ago_in_words(category.updated_at) %> ago</small> 
    </div>
  </div>

<% end %>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
