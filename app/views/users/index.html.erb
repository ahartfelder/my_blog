<h1>My Bloggers</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<% @users.each do |user| %>
  
  <div class="card text-center mb-4 shadow rounded">
    <div class="card-header">
      by <%= link_to user.username, user %>
    </div>
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
      <%= link_to 'Profile', user, class:"btn btn-outline-success" %>
      <% if logged_in? %>
        <% if user == current_user %>
          <%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-info" %>
        <% end %>
        <% if current_user.admin? && user != current_user %>
          <%= link_to 'Delete', user_path(user), class:"btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      Join <%= time_ago_in_words(user.created_at) %> ago.
    </div>
  </div>

<% end %>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>
